<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Activities.StockList">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10sp"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:inputType="none"
            android:editable="false"
            android:background="@android:color/transparent"
            android:textSize="15sp"
            android:id="@+id/addStockText"
            android:text="+ Add New Stock"/>

        <com.microlan.rushhandingoffline.Views.ExpandableHeightGridView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:clipToPadding="false"
            android:paddingBottom="10sp"
            android:verticalSpacing="5sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:numColumns="3"
            android:horizontalSpacing="5sp"
            android:id="@+id/productsGrid"
            android:scrollbars="none"
            android:layout_marginBottom="10sp">

        </com.microlan.rushhandingoffline.Views.ExpandableHeightGridView>

    </LinearLayout>
</ScrollView>