<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:layout_margin="10dp"
    tools:context=".Activities.CompanySetting">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120sp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="10sp"
            android:id="@+id/settingmenu"
            android:background="@drawable/br_round_edittext">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="1"
                android:padding="10sp"
                android:src="@drawable/settingss"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="0.3"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:text="Company Setting"/>

        </LinearLayout>

        <View
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"/>

        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="10sp"
            android:id="@+id/catogerysetting"
            android:background="@drawable/br_round_edittext">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="1"
                android:padding="10sp"
                android:src="@drawable/diagram"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="0.3"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:text="Categery Setting"/>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120sp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="10sp"
            android:id="@+id/productsetting"
            android:background="@drawable/br_round_edittext">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="1"
                android:padding="10sp"
                android:src="@drawable/box"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="0.3"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:text="Product Setting"/>

        </LinearLayout>

        <View
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"/>

        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="10sp"
            android:id="@+id/gst_setting"
            android:background="@drawable/br_round_edittext">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="1"
                android:padding="10sp"
                android:src="@drawable/tax"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="0.3"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:text="GST Setting"/>

        </LinearLayout>

    </LinearLayout>





</LinearLayout>