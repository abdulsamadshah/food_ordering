<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.Add_Category"
    android:padding="10sp">

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:hint="Category Name :">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:id="@+id/catogeryname"
            android:textSize="16dp"
            android:layout_height="match_parent" />

    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginTop="10sp"
        android:text="Category Image"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:layout_marginTop="5sp"
        android:background="@drawable/br_round_edittext">

        <ImageView
            android:id="@+id/image_load"
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:layout_marginTop="5sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:text="Attach Image"/>

    </RelativeLayout>

    <Button
        android:id="@+id/addcatogery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:background="@color/colorAccent"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:text="Add"/>
    <Button
        android:id="@+id/addcatogeryss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:background="@color/colorAccent"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:text="Show"/>

    <ImageView
        android:id="@+id/image_loads"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:layout_marginTop="5sp" />


</LinearLayout>