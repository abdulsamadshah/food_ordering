<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.AddProductDesc">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:padding="10dp"
        android:layout_marginBottom="30dp"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_margin="10dp"
            android:background="@drawable/ic_menu_gallery"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:padding="5dp"
            android:text="Product Name : Microlan"/>
        <TextView
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:text="Manufacture Name :Microlan"/>
        <TextView
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:text="Brand Name: Microlan"/>
        <TextView
            android:id="@+id/size"
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:text="Price : 40"/>
        <TextView
            android:id="@+id/desc"
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:text="Product Description:"/>
        <TextView
            android:id="@+id/cond"
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:text="Term and Condition :"/>
        <TextView
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:text=""/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:gravity="center"
            android:orientation="horizontal">
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/edit"
                android:text="EDit"
                android:textColor="@color/qr_code_white"
                android:background="@color/colorAccent"
                android:layout_weight=".5"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="DeActive"
                android:visibility="gone"
                android:layout_marginLeft="1dp"
                android:textColor="@color/qr_code_white"
                android:background="@color/colorAccent"
                android:layout_weight=".5"/>
        </LinearLayout>




    </LinearLayout>

</LinearLayout>