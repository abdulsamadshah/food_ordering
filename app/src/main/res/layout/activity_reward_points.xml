<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.RewardPoints">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:text="Value of One Point"/>

                <View
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5sp">

                <EditText
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/br_round_edittext"
                    android:padding="10sp"
                    android:textSize="15sp"
                    android:inputType="numberDecimal"
                    android:id="@+id/pointsEdit"
                    android:textColor="@android:color/black"
                    android:hint="Enter Amount"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:text="Points Received for 100 Rupees"/>

                <View
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5sp">

                <EditText
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/br_round_edittext"
                    android:padding="10sp"
                    android:textSize="15sp"
                    android:inputType="numberDecimal"
                    android:id="@+id/pointHundredEdit"
                    android:textColor="@android:color/black"
                    android:hint="Enter Points"/>


            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_marginTop="10sp"
                android:background="@color/colorAccent"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:id="@+id/submitPointBtn"
                android:text="Submit"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="bold"
                android:id="@+id/lastUpdatedDate"
                android:layout_marginTop="10sp"
                android:textColor="@android:color/black"
                android:text="Last Updated"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="10sp"
                android:textColor="@android:color/black"
                android:text="Customer Points"/>

            <com.microlan.rushhandingoffline.Views.ExpandableHeightGridView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:verticalSpacing="7sp"
                android:layout_marginTop="5sp"
                android:clipToPadding="false"
                android:paddingBottom="5sp"
                android:id="@+id/custmoersGrid">

            </com.microlan.rushhandingoffline.Views.ExpandableHeightGridView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>